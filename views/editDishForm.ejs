<%- include('head') %>
<link rel="stylesheet" href="/stylesheets/home.css">
<link rel="stylesheet" href="/stylesheets/oneRestaurant.css">
<%- include('navbar') %>

<section class="ornament">
</section>
<main class="container-xxl">
    <div class="col-12">
        <h1>Edicion plato</h1>
    </div>
    <div class="col-12">
        <form action="/dishes/editDish/<%= result_dish[0].restaurant_id %>/<%= result_dish[0].dish_id %>" 
          method="post"
          enctype="multipart/form-data"
        >
          <input 
            type="text"
            name="title"
            placeholder="Nombre"
            value="<%= result_dish[0].title %>"
          >
    </div>
    <div class="col-12">
          <input 
            type="text"
            name="dish_description"
            placeholder="Descripcion"
            value="<%= result_dish[0].dish_description %>"
          >
    </div>
    <div class="col-12">
            <label for="file">Sube una foto:</label>
            <label class="label-img" for="file"><img src="/images/plato.png" alt="icono plato"></label>
            <input
            id="file"
            name="img"
            type="file"
            hidden
          >
    </div>
    <div class="col-12 col-md-4 d-flex flex-wrap p-2">
            <button>Aceptar</button>
            <a href="/">
              <button type="button">Cancelar</button>
            </a>
            <button type="reset">Reset</button>
          </div>
        </form>
      </div>
    </div>
  </section>
</main>
<section class="ornament">
</section>
<%- include('footer') %>